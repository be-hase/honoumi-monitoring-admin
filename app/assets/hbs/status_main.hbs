<div class="panel panel-default">
    <div class="panel-heading">Monitoring status</div>
    <div class="panel-body">
        <div class="row">
{{#if isNowMonitoring}}
            <div class="col-sm-6 col-md-6">
                Now monitoring
            </div>
            <div class="col-sm-6 col-md-6 text-right">
                <button class="btn btn-xs btn-danger status-change-btn">stop</button>
            </div>
{{else}}
            <div class="col-sm-6 col-md-6">
                Stopped
            </div>
            <div class="col-sm-6 col-md-6 text-right">
                <button class="btn btn-xs btn-danger status-change-btn">start</button>
            </div>
{{/if}}
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">Event types</div>
    <div class="panel-body">
        <table class="table table-hover">
            <thead>
                <tr class="table-head">
                    <th>Event name</th>
                    <th>properties</th>
                </tr>
            </thead>
            <tbody>
{{#each eventTypes}}
                <tr class="table-data">
                    <td>{{this.name}}</td>
                    <td>
                        <dl class="dl-horizontal">
    {{#each this.properties}}
                            <dt class="property-name">{{this.name}}</dt>
                            <dd>{{this.type}}</dd>
    {{/each}}
                        </dl>
                    </td>
                </tr>
{{/each}}
            </tbody>
        </table>
    </div>
</div>
